{
    "name": "sapien/sapien",
    "description": "Server API (SAPI) request and response objects for PHP.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "John Boehr",
            "email": "jbboehr@php.net",
            "role": "Lead"
        },
        {
            "name": "Paul M. Jones",
            "email": "pmjones@pmjones.io",
            "role": "Lead"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "ext-xdebug": "*",
        "pds/skeleton": "^1.0",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4":  {
            "Sapien\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4":  {
            "Sapien\\": "./tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "stan": "./vendor/bin/phpstan analyze -c phpstan.neon src"
    }
}
