{
    "name": "sapien/sapien",
    "description": "Server API (SAPI) request and response objects for PHP.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "John Boehr",
            "email": "jbboehr@php.net",
            "role": "Lead"
        },
        {
            "name": "Paul M. Jones",
            "email": "pmjones@pmjones.io",
            "role": "Lead"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "ext-xdebug": "*",
        "pds/composer-script-names": "^1.0",
        "pds/skeleton": "^1.0",
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0",
        "pmjones/php-styler": "^0.1"
    },
    "autoload": {
        "psr-4":  {
            "Sapien\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4":  {
            "Sapien\\": "./tests"
        }
    },
    "scripts": {
        "analyze": "./vendor/bin/phpstan analyze -c phpstan.neon",
        "check": "composer cs-fix && composer test && composer analyze",
        "test": "./vendor/bin/phpunit",
        "cs-fix": "./vendor/bin/php-styler apply"
    }
}
